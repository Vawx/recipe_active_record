<div class="container">
  <div class="col-lg-6 col-md-6">
    <label for="">Current recipes</label>
    <div class="well">

    </div>
  </div>
  <div class="col-lg-6 col-md-6">
    <label for="">Create recipe</label>
    <div class="well">
      <form class="" action="/recipe" method="post" id="ingredient-form">
        <div class="ingredient-list">
          <div class="form-group">
            <input class="form-control" type="text" name="recipe_name" placeholder="Enter a name...">
          </div>
          <div class="form-group">
            <label for="">Ingredients</label>
            <div class="input-group">
              <div class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></button>
                  <ul class="dropdown-menu">
                    <li class="ingredient"><a href="#">Action</a></li>
                    <li class="ingredient"><a href="#">Another action</a></li>
                    <li class="ingredient"><a href="#">Something else here</a></li>
                    <li class="ingredient"><a href="#">Separated link</a></li>
                  </ul>
                </div><!-- /btn-group -->
              </div>
              <input id="ingredient_input" type="text" class="form-control" aria-label="..." value="hello">
            </div>
          </div>
          <div class="form-group">
            <button class="btn btn-default" type="button" id="add-input-field">+</button>
          </div>

          <div class="form-group">
            <label for="instructions">Instructions</label>
            <textarea class="col-xs-12" name="instructions" placeholder="Enter instructions here..."></textarea>
          </div>

          <button style="margin-top: 10px;"class="btn btn-primary" type="submit" name="button">Create Recipe</button>
        </form>
      </div>
    </div>
  </div>
</div>
